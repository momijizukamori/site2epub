{
  "manifest_version": 2,
  "name": "chrysgarden2epub",
  "description": "Download novels from Chrysanthemum Garden as ePub files",
  "version": "0.0.1",
  "icons": {
    "64": "icons/icon.png"
  },
  "background":
    {
      "scripts": [
        "addon/background.js"
      ]
    },
  "page_action": {
    "default_icon": {
      "64": "icons/icon.png"
    },
    "default_title": "chrysgarden2epub",
    "show_matches": ["*://*.chrysanthemumgarden.com/novel-tl/*"]
  },
  "permissions": [
    "*://*.chrysanthemumgarden.com/*",
    "cookies",
    "downloads",
    "activeTab",
    "webNavigation"
  ]
}
